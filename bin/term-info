#!/usr/bin/env bash
#

redraw() {
    local str width height length
    
    width=$(tput cols)
    height=$(tput lines)
    str="$width x $height"
    length=${#str}
    clear
    tput cup $((height / 2)) $(((width / 2) - (length / 2)))
    echo "$str"
}

trap redraw WINCH

redraw
while true; do
    :
done

